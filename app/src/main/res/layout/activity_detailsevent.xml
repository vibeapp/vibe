<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.ffl.vibe.Activities.DetailseventActivity">
    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme"
        android:fitsSystemWindows="true">
        <android.support.design.widget.CollapsingToolbarLayout
            android:layout_width="match_parent"
            android:layout_height="300dp"
            app:layout_scrollFlags="scroll|exitUntilCollapsed"
            app:contentScrim="?attr/colorPrimary"
            android:fitsSystemWindows="true"
            app:expandedTitleTextAppearance="@android:color/transparent">
            <ImageView
                android:id="@+id/imgposterdetails"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scaleType="centerCrop"
                android:src="@drawable/new_logo2"
                app:layout_collapseMode="parallax"
                android:contentDescription="@string/app_name"/>
            <android.support.v7.widget.Toolbar
                android:id="@+id/toolbardetailsevent"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:title="@string/app_name"
                app:popupTheme="@style/Theme.AppCompat.Light"
                app:layout_collapseMode="pin"/>
            </android.support.design.widget.CollapsingToolbarLayout>
        </android.support.design.widget.AppBarLayout>
    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipToPadding="false"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardElevation="5dp"
                    app:cardUseCompatPadding="true">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/tveventnamedetails"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="EVENT NAME"
                        android:textStyle="bold"
                        android:textSize="20sp"
                        android:textColor="@color/nliveo_black"
                        android:layout_margin="15dp"/>
                </LinearLayout>
                </android.support.v7.widget.CardView>
                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardElevation="5dp"
                    app:cardUseCompatPadding="true">
                <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_margin="10dp">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:drawableLeft="@drawable/ic_location"
                            android:text="LOCATION"
                            android:textStyle="bold"
                            android:textSize="20sp"
                            android:textColor="@color/nliveo_black"
                            android:layout_marginTop="15dp"/>
                        <TextView
                            android:id="@+id/tveventclubdetails"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="adresse"
                            android:textSize="20sp"
                            android:textColor="@color/nliveo_black"
                            android:layout_marginLeft="15dp"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_margin="10dp">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:drawableLeft="@drawable/ic_clock"
                            android:text="DATE"
                            android:textStyle="bold"
                            android:textSize="20sp"
                            android:textColor="@color/nliveo_black"
                            android:layout_marginTop="15dp"/>
                        <TextView
                            android:id="@+id/tveventdatedetails"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="date"
                            android:textSize="20sp"
                            android:textColor="@color/nliveo_black"
                            android:layout_marginLeft="15dp"/>
                    </LinearLayout>
                `</LinearLayout>
                </android.support.v7.widget.CardView>
                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardElevation="5dp"
                    app:cardUseCompatPadding="true">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/tveventpricedetails"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="EVENT PRICE"
                        android:textStyle="bold"
                        android:textSize="20sp"
                        android:textColor="@color/nliveo_black"
                        android:layout_margin="15dp"/>
                </LinearLayout>
                </android.support.v7.widget.CardView>
                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardElevation="5dp"
                    app:cardUseCompatPadding="true">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="EVENT GUEST"
                        android:textStyle="bold"
                        android:textSize="20sp"
                        android:textColor="@color/nliveo_black"
                        android:layout_margin="15dp"/>
                    <TextView
                        android:id="@+id/tveventguestdetails"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="EVENT GUEST"
                        android:textStyle="bold"
                        android:textSize="15sp"
                        android:textColor="@color/nliveo_black"
                        android:layout_marginLeft="15dp"/>
                </LinearLayout>
                </android.support.v7.widget.CardView>
                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardElevation="5dp"
                    app:cardUseCompatPadding="true">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="SPONSOR"
                        android:textStyle="bold"
                        android:textSize="20sp"
                        android:textColor="@color/nliveo_black"
                        android:layout_margin="15dp"/>
                    <TextView
                        android:id="@+id/tveventsponsordetails"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="EVENT SPONSOR"
                        android:textStyle="bold"
                        android:textSize="15sp"
                        android:textColor="@color/nliveo_black"
                        android:layout_marginLeft="15dp"/>
                </LinearLayout>
                </android.support.v7.widget.CardView>
                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardElevation="5dp"
                    app:cardUseCompatPadding="true">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/tveventmapdetails"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="ITINERAIRE"
                        android:textStyle="bold"
                        android:textSize="20sp"
                        android:textColor="@color/nliveo_black"
                        android:layout_margin="15dp"/>
                </LinearLayout>
                </android.support.v7.widget.CardView>
                </LinearLayout>

        </android.support.v4.widget.NestedScrollView>
</android.support.design.widget.CoordinatorLayout>
